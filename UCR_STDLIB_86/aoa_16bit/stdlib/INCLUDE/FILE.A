StdGrp		group	stdlib, stddata


FileVar		struc
fvHandle	dw	?
fvMode		dw	0
fvIndex		dw	0
fvByteCount	dw	0
fvBuffer	db	512 dup (?)
FileVar		ends

stddata		segment	para public 'sldata'
stddata		ends

stdlib		segment	para public 'slcode'
stdlib		ends

slcall		macro	adrs
		db	09ah			;Far call
		dd	stdgrp:adrs		;Address of routine to call
		endm


