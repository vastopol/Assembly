unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

// dateClass_t.isValid-
//
//	Returns true/false in AL (eax) based on the
// validity of the object's date.

procedure dateClass_t.validate;
begin validate;

	test( esi, esi );
	jz badObj;
	
	date.validate( this.theDate );
	ret();
	
badObj:
	raise( ex.BadObjPtr );
	
end validate;
		
	
	
end DateTime;			
