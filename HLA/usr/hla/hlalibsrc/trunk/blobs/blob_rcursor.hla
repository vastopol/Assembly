unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" );
#include( "excepts.hhf" );
#includeOnce( "threads.hhf" )



// blob.cursor-
//
//	Returns the value of the cursor field.

procedure blob.rcursor( b:blob.blob ); @noframe;
#if( @thread )
	var
		rc:dword;
#endif
begin rcursor;

	push( ebp );
	mov( esp, ebp );
	#if( @thread )
		sub( _vars_, esp );
	#endif;

	mov( b, eax );
	test( eax, eax );
	jz AttemptToDerefNULL;
	
	#if( @thread )
	
		try
		
			thread.enterCriticalSection
			( 
				(type blob.blobRec [eax]).criticalSection 
			);
			push( (type blob.blobRec [eax]).rcursor );
			pop( rc );
			
		  anyexception
		
			mov( b, edx );
			thread.leaveCriticalSection
			( 
				(type blob.blobRec [edx]).criticalSection 
			);
			reraise( eax );
			
		endtry;
		thread.leaveCriticalSection( (type blob.blobRec [eax]).criticalSection );
		mov( rc, eax );
	
	#else
	
		mov( (type blob.blobRec [eax]).rcursor, eax );
			
	#endif

	leave();
	ret( _parms_ );
	
AttemptToDerefNULL:
	raise( ex.AttemptToDerefNULL );

end rcursor;



end blobUnit;




	

