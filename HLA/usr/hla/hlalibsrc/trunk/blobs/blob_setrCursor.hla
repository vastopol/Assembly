unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" );
#include( "excepts.hhf" );
#includeOnce( "threads.hhf" )



// setrCursor-
//
//	Sets the read cursor field of a blob value.

procedure blob.setrCursor( b:blob.blob; newCursor:dword ); @noframe;
begin setrCursor;

	push( ebp );
	mov( esp, ebp );
	push( ebx );
	push( eax );
	
	mov( b, ebx );
	test( ebx, ebx );
	jz AttemptToDerefNULL;

	#if( @thread )
	
		try
		
			thread.enterCriticalSection
			( 
				(type blob.blobRec [ebx]).criticalSection 
			);
			mov( newCursor, eax );
			mov( eax, (type blob.blobRec [ebx]).rcursor );
			
		  anyexception
		
			mov( b, edx );
			thread.leaveCriticalSection
			( 
				(type blob.blobRec [edx]).criticalSection 
			);
			reraise( eax );
			
		endtry;
		thread.leaveCriticalSection( (type blob.blobRec [ebx]).criticalSection );
	
	#else
	
		mov( newCursor, eax );
		mov( eax, (type blob.blobRec [ebx]).rcursor );
			
	#endif

		
	pop( eax );
	pop( ebx );
	pop( ebp );
	ret( _parms_ );
	
AttemptToDerefNULL:
	raise( ex.AttemptToDerefNULL );

end setrCursor;



end blobUnit;




	

