// mac.bind- Binds a handle to a socket address.

procedure mac.bind
( 
		sockfd	:dword; 
	var	addr	:hla.sockaddr; 
		addrlen	:hla.socklen_t 
);
	@nodisplay; @noframe;
var
	ebxSave	:dword;
	ecxSave	:dword;
	edxSave	:dword;
	esiSave	:dword;
	ediSave	:dword;
	
begin bind;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mac.saveregs;

	and( $FFFF_FFF0, esp );		// Align call below to 16 bytes.
	sub( 4, esp );
	_bind( sockfd, addr, addrlen );

	mac.restoreregs;
	cmp( eax, -1 );
	je badBind;
	clc();
	leave();
	ret( _parms_ );
	
badBind:
	mac.errno();
	stc();
	leave();
	ret( _parms_ );
	
		
end bind;

