unit LinuxUnit;
#include( "linux.hhf" )

// getuid - Retrieves the userID for a given process.

procedure linux.getuid;
	@nodisplay;
begin getuid;

	linux.pushregs;
	mov( linux.sys_getuid, eax );
	int( $80 );
	linux.popregs;	
	
end getuid;

end LinuxUnit;
